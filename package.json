{
  "name": "pi-lottery-admin",
  "version": "2.0.0",
  "description": "Pi Lottery Platform - Provably Fair Lotteries with 2% Ticket System and Manual Prize Distribution",
  "private": true,
  "keywords": [
    "pi-network",
    "lottery",
    "blockchain",
    "provably-fair",
    "cryptocurrency",
    "bitcoin-randomness",
    "testnet",
    "sandbox"
  ],
  "author": "Pi Lottery Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "firebase": "^9.23.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:production": "DISABLE_ESLINT_PLUGIN=true GENERATE_SOURCEMAP=false react-scripts build",
    "build:staging": "REACT_APP_DEPLOYMENT_ENV=staging react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:ci": "CI=true react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "serve": "npx serve -s build -l 3000",
    "serve:production": "npm run build:production && npx serve -s build",
    "analyze": "npx source-map-explorer 'build/static/js/*.js'",
    "analyze:build": "npm run build && npm run analyze",
    "clean": "rm -rf build node_modules package-lock.json && npm install",
    "clean:cache": "rm -rf node_modules/.cache",
    "deploy:netlify": "npm run build:production && netlify deploy --prod --dir=build",
    "deploy:preview": "npm run build && netlify deploy --dir=build",
    "firebase:deploy": "npm run build:production && firebase deploy",
    "firebase:serve": "npm run build && firebase serve",
    "lint": "eslint src/ --ext .js,.jsx",
    "lint:fix": "eslint src/ --ext .js,.jsx --fix",
    "lint:check": "eslint src/ --ext .js,.jsx --max-warnings 0",
    "format": "prettier --write src/**/*.{js,jsx,css,md}",
    "format:check": "prettier --check src/**/*.{js,jsx,css,md}",
    "type-check": "echo 'Type checking not configured for JavaScript project'",
    "precommit": "npm run lint:check && npm run format:check",
    "prebuild": "npm run clean:cache",
    "postbuild": "echo 'Build completed successfully!'",
    "dev": "npm start",
    "prod": "npm run build:production && npm run serve",
    "health-check": "curl -f http://localhost:3000 || exit 1",
    "pi-test": "echo 'Testing Pi SDK integration...' && npm run build:production"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "prefer-const": "warn",
      "no-var": "error",
      "no-undef": "error",
      "react-hooks/exhaustive-deps": "warn"
    },
    "overrides": [
      {
        "files": ["src/**/*.js", "src/**/*.jsx"],
        "rules": {
          "prefer-const": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "not ie 11",
      "not chrome < 60",
      "not firefox < 60",
      "not safari < 12"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "not ie 11"
    ]
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "source-map-explorer": "^2.5.3",
    "serve": "^14.2.0"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  },
  "homepage": ".",
  "proxy": "http://localhost:3000",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/firebase.js",
      "!src/serviceWorker.js",
      "!src/reportWebVitals.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx}"
    ],
    "testEnvironment": "jsdom"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/pi-lottery-admin.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/pi-lottery-admin/issues"
  },
  "config": {
    "firebase": {
      "projectId": "pi-lottery-901c4",
      "hosting": {
        "public": "build",
        "ignore": [
          "firebase.json",
          "**/.*",
          "**/node_modules/**"
        ],
        "rewrites": [
          {
            "source": "**",
            "destination": "/index.html"
          }
        ],
        "headers": [
          {
            "source": "**/*.@(js|css)",
            "headers": [
              {
                "key": "Cache-Control",
                "value": "max-age=31536000"
              }
            ]
          }
        ]
      }
    },
    "netlify": {
      "build": {
        "command": "npm run build:production",
        "publish": "build"
      },
      "environment": {
        "NODE_VERSION": "18",
        "NPM_VERSION": "9"
      }
    }
  },
  "volta": {
    "node": "18.17.0",
    "npm": "9.6.7"
  },
  "packageManager": "npm@9.6.7",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/your-username"
  },
  "pi-lottery": {
    "version": "2.0.0",
    "environment": "production",
    "features": {
      "provablyFair": true,
      "multiWinner": true,
      "ticketSystem": "2%",
      "manualDistribution": true,
      "bitcoinRandomness": true,
      "piNetworkIntegration": true,
      "sandboxSupport": true,
      "testnetSupport": true
    },
    "supportedBrowsers": [
      "Pi Browser",
      "Chrome",
      "Firefox",
      "Safari",
      "Edge"
    ],
    "piSdkVersion": "2.0",
    "minimumNodeVersion": "18.0.0"
  },
  "build": {
    "optimization": {
      "splitChunks": {
        "chunks": "all",
        "minSize": 20000,
        "maxSize": 244000
      }
    },
    "env": {
      "DISABLE_ESLINT_PLUGIN": "true",
      "GENERATE_SOURCEMAP": "false",
      "INLINE_RUNTIME_CHUNK": "false"
    }
  },
  "performance": {
    "budget": [
      {
        "type": "initial",
        "maximumWarning": "500kb",
        "maximumError": "1mb"
      },
      {
        "type": "anyComponentStyle",
        "maximumWarning": "50kb",
        "maximumError": "100kb"
      }
    ]
  },
  "security": {
    "audit": {
      "level": "moderate",
      "advisories": []
    }
  },
  "deployment": {
    "environments": {
      "development": {
        "url": "http://localhost:3000",
        "piSdk": "sandbox"
      },
      "staging": {
        "url": "https://staging.pi-lottery.netlify.app",
        "piSdk": "sandbox"
      },
      "production": {
        "url": "https://pi-lottery.netlify.app",
        "piSdk": "sandbox"
      },
      "sandbox": {
        "url": "https://sandbox.minepi.com/app/lottery-app-*",
        "piSdk": "native"
      }
    }
  }
}
