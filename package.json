{
  "name": "pi-lottery-admin",
  "version": "2.0.0",
  "description": "Pi Lottery Platform - Provably Fair Lotteries with 2% Ticket System and Manual Prize Distribution",
  "private": true,
  "keywords": [
    "pi-network",
    "lottery",
    "blockchain",
    "provably-fair",
    "cryptocurrency",
    "bitcoin-randomness"
  ],
  "author": "Pi Lottery Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "firebase": "^9.23.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "serve": "npx serve -s build",
    "build:production": "GENERATE_SOURCEMAP=false react-scripts build",
    "analyze": "npx source-map-explorer 'build/static/js/*.js'",
    "clean": "rm -rf build node_modules package-lock.json && npm install",
    "deploy:netlify": "npm run build:production && netlify deploy --prod --dir=build",
    "firebase:deploy": "npm run build:production && firebase deploy",
    "lint": "eslint src/ --ext .js,.jsx",
    "lint:fix": "eslint src/ --ext .js,.jsx --fix",
    "format": "prettier --write src/**/*.{js,jsx,css,md}",
    "type-check": "echo 'Type checking not configured for JavaScript project'",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:ci": "CI=true react-scripts test --coverage --watchAll=false"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "not ie 11"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "not ie 11"
    ]
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "prettier": "^2.8.8",
    "source-map-explorer": "^2.5.3"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  },
  "homepage": ".",
  "proxy": "http://localhost:3000",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/firebase.js",
      "!src/serviceWorker.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/pi-lottery-admin.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/pi-lottery-admin/issues"
  },
  "config": {
    "firebase": {
      "projectId": "pi-lottery-901c4",
      "hosting": {
        "public": "build",
        "ignore": [
          "firebase.json",
          "**/.*",
          "**/node_modules/**"
        ],
        "rewrites": [
          {
            "source": "**",
            "destination": "/index.html"
          }
        ]
      }
    }
  },
  "volta": {
    "node": "18.17.0",
    "npm": "9.6.7"
  }
}
